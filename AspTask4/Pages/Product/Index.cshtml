@page
@model AspTask4.Pages.Product.IndexModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";

}

@if(Model.Info!=""){
    <div class="alert alert-success" role="alert">
        @Model.Info
    </div>
}


<table class="table">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Name</th>
            <th scope="col">Price</th>
            <th scope="col">Edit</th>
            <th scope="col">Delete</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products)
        {
            <tr>
                <th scope="row">@item.Id</th>
                <th scope="row">@item.Name</th>
                <th scope="row">@item.Price </th>
                <th scope="row">
                    <a class="btn btn-outline-primary" asp-page-handler="Edit" asp-route-id="@item.Id">Edit</a>
                </th>
                <th scope="row">
                    <a class="btn btn-outline-danger" asp-page-handler="Delete" asp-route-id="@item.Id">Delete</a>
                </th>
            </tr>
        }
    </tbody>
</table>

<form class="col-5" method="post">
    <div class="mb-3">
        <label class="form-label">Product Name</label>
        <input asp-for="Product.Name" type="text" class="form-control">
    </div>
    <div class="mb-3">
        <label class="form-label">Product Price</label>
        <input asp-for="Product.Price" type="number" class="form-control">
    </div>

    <button type="submit" class="btn btn-primary">Add new product</button>

</form>
